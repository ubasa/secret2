name: Secret CI
on: 
  pull_request:
    types: [opened, edited, reopened]
    branches: [main]
  workflow_dispatch:
  push:
    branches: [main]
    paths-ignore: [.github/workflows/*]
    
jobs:
  TruffleHog:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
      - name: TruffleHog OSS
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: ${{ github.event.repository.default_branch }}
          head: HEAD
          extra_args: --debug
